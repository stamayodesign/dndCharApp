<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <TextView
        android:id="@+id/fragMaintvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character Stats"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fragMainllStatsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragMaintvTitle">

        <TextView
            android:id="@+id/fragMainllStatsName_STR"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="STR"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainllStatsName_DEX"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="DEX"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainllStatsName_STR"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainllStatsName_CON"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="CON"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainllStatsName_DEX"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainllStatsName_INT"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="INT"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainllStatsName_CON"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainllStatsName_WIS"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="WIS"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainllStatsName_INT"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainllStatsName_CHA"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="CHA"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainllStatsName_WIS"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragMainlletStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragMainllStatsName">

        <TextView
            android:id="@+id/fragMainetStat_STR"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="17"
            android:textSize="16dp"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainetStat_DEX"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="8"
            android:textSize="16dp"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainetStat_STR"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainetStat_CON"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="16"
            android:textSize="16dp"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainetStat_DEX"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainetStat_INT"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="16"
            android:textSize="16dp"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainetStat_CON"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainetStat_WIS"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="18"
            android:textSize="16dp"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainetStat_INT"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMainetStat_CHA"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="10"
            android:textSize="16dp"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMainetStat_WIS"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragMainllMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragMainlletStats">

        <TextView
            android:id="@+id/fragMaintvStatMod_STR"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="(+3)"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMaintvStatMod_DEX"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="(-1)"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMaintvStatMod_STR"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMaintvStatMod_CON"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="(+3)"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMaintvStatMod_DEX"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMaintvStatMod_INT"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="(+3)"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMaintvStatMod_CON"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMaintvStatMod_WIS"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="(+4)"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMaintvStatMod_INT"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragMaintvStatMod_CHA"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="(+0)"
            android:textColor="@color/normalTextColor"
            app:layout_constraintStart_toEndOf="@+id/fragMaintvStatMod_WIS"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragMainllMod">

        <Button
            android:id="@+id/fragMainbtnEditStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Stats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />


        <Button
            android:id="@+id/fragMainbtnBackToFragMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Ironsworn"
            app:layout_constraintStart_toStartOf="@+id/fragMainbtnEditStats"
            app:layout_constraintTop_toBottomOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/fragMainllStatsName"
        app:layout_constraintTop_toTopOf="@+id/fragMainllStatsName">

        <Button
            android:id="@+id/btnUseStrMod"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnUseDexMod"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnUseConMod"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnUseIntMod"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnUseWisMod"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnUseChaMod"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>